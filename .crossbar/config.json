{
  "version": 2,
  "workers": [
    {
      "type": "router",
      "options": {
        "pythonpath": [
          ".."
        ]
      },
      "realms": [
        {
          "name": "realm1",
          "roles": [
            {
              "name": "public",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": false,
                    "register": false,
                    "publish": false,
                    "subscribe": false
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ],
              "permissions": [
                {
                  "uri": "com.kdmwebforms.public.",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            },
            {
              "name": "backend",
              "permissions": [
                {
                  "uri": "",
                  "match": "prefix",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": false,
                    "publisher": false
                  },
                  "cache": true
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "static",
              "directory": "../templates"
            },
            "static": {
              "type": "static",
              "directory": "../static"
            },
            "ws": {
              "type": "websocket",
              "auth": {
                "anonymous": {
                  "type": "static",
                  "role": "public"
                }
              }
            }
          }
        }
      ],
      "components": [
        {
          "type": "class",
          "classname": "backend.AppSession",
          "realm": "realm1",
          "role": "backend"
        }
      ]
    }
  ]
}
